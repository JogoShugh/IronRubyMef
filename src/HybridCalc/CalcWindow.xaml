<Window x:Class="HybridCalc.CalcWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MEF C#/Ruby Hybrid Calculator" Height="220" Width="300"
    Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="23" Name="a" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60" Margin="12,12,0,0" Text="2" />
        <ComboBox Margin="78,12,136,0" Name="op" Height="23" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,12,69,0" Name="b" VerticalAlignment="Top" Width="61" Text="3" />
        <Button Height="23" Name="calculate" VerticalAlignment="Top" HorizontalAlignment="Right" Width="51" Click="calculate_Click" Margin="0,12,12,0">=</Button>
        <TextBlock Margin="12,41,12,40" Name="result" FontSize="60" Text="0" />
        <TextBlock Height="22" Margin="12,0,12,12" Name="errorMessage" VerticalAlignment="Bottom" Foreground="Red" />
    </Grid>
</Window>
